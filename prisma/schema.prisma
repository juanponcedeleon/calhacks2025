  generator client {
    provider = "prisma-client-js"
  }

  datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
  }

  model Listing {
    id           String   @id @default(auto()) @map("_id") @db.ObjectId
    name         String
    description  String
    endTime      Float
    minBid       Float
  }

  model Bid {
    id           String   @id @default(auto()) @map("_id") @db.ObjectId
    name         String
    bid          Float
    endTime      Float
    minBid       Float
  }

  model Cursor {
    id           String   @id @default(auto()) @map("_id") @db.ObjectId
    eventSeq     String
    txDigest     String
  }
